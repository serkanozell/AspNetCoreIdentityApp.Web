@{
    ViewData["Title"] = "SignIn";
}

@model SignInViewModel

@section Scripts{

    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1>Sign In</h1>

        <div asp-validation-summary=ModelOnly class="alert alert-danger role="alert">
            @TempData["SuccessMessage"]
        </div>

        @*burada illaki actionları querystring i falan vermemize gerek yok. onun yerine sadece method tipini versekte aynı işlevi yapar*@
        @*<form asp-controller="Home" asp-action="SignIn" asp-route-returnurl="@Context.Request.Query["returnurl"]" method="post">*@

        <form method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input value="serkanozel399@gmail.com" class="form-control" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input value="Serkan.1991" type="password" class="form-control" asp-for="Password">
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" for="RememberMe" asp-for="RememberMe"></label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        <a class="btn btn-outline-secondary btn-sm  float-end" asp-controller="Home" asp-action="ForgotPassword">Forgot My Password</a>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Sign In</button>

        </form>
    </div>
</div>