@{
    ViewData["Title"] = "Index";
}

@model UserViewModel

<h1>User Details</h1>

<div class="row">

    <div class="col-md-6 offset-md-3 text-center">

        <user-picture-thumbnail class="rounded" style="width:200px;height:200px" picture-url="@Model.PictureUrl"></user-picture-thumbnail>

    </div>

</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <table class="table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>E-Mail</th>
                    <th>Phone Number</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
