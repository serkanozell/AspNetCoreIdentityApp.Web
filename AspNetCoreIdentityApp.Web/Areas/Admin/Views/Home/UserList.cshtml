@{
    ViewData["Title"] = "UserList";
}

@model List<AdminModel.UserViewModel>

<h1>User List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Role Processes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td><user-role-names user-id="@item.Id"></user-role-names></td>
                <td><a class="btn btn-info btn-sm" asp-controller="Role" asp-action="AssignRoleToUser" asp-route-id="@item.Id">Assign Role</a></td>
            </tr>
        }
    </tbody>
</table>

