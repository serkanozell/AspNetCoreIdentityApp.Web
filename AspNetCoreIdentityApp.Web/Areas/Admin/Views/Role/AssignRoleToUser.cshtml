@{
    ViewData["Title"] = "AssignRoleToUser";
}

@model List<AdminModel.AssignRoleToUserViewModel>




<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Assign Role To User</h1>
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.UserId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist">
                    <label asp-for="@Model[i].RoleName" class="form-check-label" >@Model[i].RoleName</label>
                    <input type="hidden" asp-for="@Model[i].RoleName">
                    <input type="hidden" asp-for="@Model[i].RoleId">
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Assign Role" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-controller="Home" asp-action="UserList">Back to User List</a>
        </div>
    </div>
</div>